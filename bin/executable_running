#!/usr/bin/env bash
# =============================================================================
# List Running Processes
# Display running processes with optional filtering
# =============================================================================
# Usage: running [pattern]
# Example: running node (shows processes containing 'node')
#
# Description:
#   Lists running processes. If a pattern is provided, filters to
#   processes matching that pattern.

set -euo pipefail

process_list="$(ps -eo 'pid command')"
if [[ $# != 0 ]]; then
  process_list="$(echo "$process_list" | grep -Fiw "$@")"
fi

echo "$process_list" |
  grep -Fv "${BASH_SOURCE[0]}" |
  grep -Fv grep |
  GREP_COLORS='mt=00;35' grep -E --colour=auto '^\s*[[:digit:]]+'
