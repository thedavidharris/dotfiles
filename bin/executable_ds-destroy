#!/bin/bash
# =============================================================================
# Destroy .DS_Store Files
# Remove all .DS_Store files recursively
# =============================================================================
# Usage: ds-destroy [directory]
# Example: ds-destroy . (defaults to current directory)
#
# Description:
#   Recursively finds and removes all .DS_Store files from a directory tree

set -euo pipefail

DIR="${1:-.}"

if [[ ! -d "$DIR" ]]; then
    echo "Directory not found: $DIR"
    exit 1
fi

echo "Destroying .DS_Store files in $DIR..."

# Find and remove .DS_Store files
find "$DIR" -name ".DS_Store" -type f -delete

echo "Done!"
