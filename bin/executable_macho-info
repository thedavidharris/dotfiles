#!/bin/bash
# =============================================================================
# Mach-O Binary Info
# Display Mach-O binary architecture and platform information
# =============================================================================
# Usage: macho-info <binary>
# Example: macho-info /usr/bin/ls
#
# Description:
#   Shows architecture and platform information for Mach-O binaries

set -euo pipefail

if [[ $# -eq 0 ]]; then
  echo "Usage: macho-info <binary>" >&2
  exit 1
fi

readonly file="$1"
lipo -info "$file"
otool -lv "$file" | grep platform | sort -u
