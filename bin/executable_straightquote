#!/usr/bin/env bash
# =============================================================================
# Straight Quotes
# Convert curly quotes to straight quotes
# =============================================================================
# Usage: echo "text" | straightquote
# Example: echo ""Hello"" | straightquote
#
# Description:
#   Converts curly quotes ("" and '') to straight quotes (" and ')

set -euo pipefail

# shellcheck disable=SC1112
sed 's/[""]/"/g; s/[''']/'"'"'/g'
