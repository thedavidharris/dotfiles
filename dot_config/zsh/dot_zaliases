#!/bin/zsh
#
# Zsh aliases and functions
# Organized by category for better maintainability

# =============================================================================
# SYSTEM & PERMISSIONS
# =============================================================================

# Enable aliases to be sudo'ed
alias sudo='sudo '

# =============================================================================
# NAVIGATION
# =============================================================================

# Quick directory navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Modern directory navigation with zoxide
command -v z > /dev/null && alias cd="z"  # Use zoxide for cd if available
alias cdd="cd ~/Desktop"
alias cdl="cd ~/Downloads"
alias cdo="cd ~/Documents"

# =============================================================================
# UTILITIES & TOOLS
# =============================================================================

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

# =============================================================================
# NETWORK & SYSTEM INFO
# =============================================================================

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Show active network interfaces
alias ifactive="ifconfig | pcregrep -M -o '^[^\t:]+:([^\n]|\n\t)*status: active'"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# =============================================================================
# SYSTEM UTILITIES & COMPATIBILITY
# =============================================================================

# Canonical hex dump; some systems have this symlinked
command -v hd > /dev/null || alias hd="hexdump -C"

# macOS compatibility aliases
command -v md5sum > /dev/null || alias md5sum="md5"
command -v sha1sum > /dev/null || alias sha1sum="shasum"

# Clipboard utilities
alias c="tr -d '\n' | pbcopy"

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# Ring the terminal bell, and put a badge on Terminal.app's Dock icon
alias badge="tput bel"

# Intuitive map function
alias map="xargs -n1"

# Reload the shell
alias reload="exec $SHELL -l"

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

# =============================================================================
# APPLICATIONS
# =============================================================================

# Google Chrome
alias chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome'

# =============================================================================
# macOS SYSTEM MANAGEMENT
# =============================================================================

# File system cleanup
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl; sqlite3 ~/Library/Preferences/com.apple.LaunchServices.QuarantineEventsV* 'delete from LSQuarantineEvent'"

# Finder management
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# System controls
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias cleardock="defaults write com.apple.dock persistent-apps -array \"\" && killall Dock"

# Spotlight management
alias spotoff="sudo mdutil -a -i off"
alias spoton="sudo mdutil -a -i on"

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Xcode commands
alias simctl="xcrun simctl"
alias plistbuddy="/usr/libexec/PlistBuddy"

# PDF utilities
alias mergepdf='/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py'

# =============================================================================
# FILE LISTING & MODERN TOOLS
# =============================================================================

# Traditional ls with colors
if ls --color > /dev/null 2>&1; then # GNU `ls`
  colorflag="--color=auto"
else # OS X `ls`
  colorflag="-G"
fi

# Tree with colors (if tree is installed)
command -v tree > /dev/null && alias tree="tree -C"

# Modern tool aliases (preferred when available)
if command -v eza >/dev/null 2>&1; then
  # Use eza (modern ls replacement)
  alias ls="eza --color=always --group-directories-first"
  alias la="eza -la --color=always --group-directories-first"
  alias ll="eza -l --color=always --group-directories-first"
  alias l="eza -CF --color=always --group-directories-first"
else
  # Fallback to traditional ls with colors
  alias la="ls -la $colorflag"
  alias ls="ls $colorflag"
  alias ll="ls -l $colorflag"
  alias l="ls -CF $colorflag"
fi

# =============================================================================
# MODERN CLI ALTERNATIVES
# Use new names instead of aliasing over incompatible legacy tools
# =============================================================================

# bat - better cat (don't alias cat, different behavior with pipes/redirects)
if command -v bat >/dev/null 2>&1; then
  alias b="bat"
  alias bp="bat --paging=always"
  alias bathelp='bat --plain --language=help'
  # Help function with syntax highlighting
  help() { "$@" --help 2>&1 | bat --plain --language=help; }
fi

# eza - better ls (safe to alias, mostly compatible)
if command -v eza >/dev/null 2>&1; then
  alias tree="eza --tree"
  alias lt="eza --tree --level=2"
  alias lta="eza --tree --all"
fi

# fd - better find (don't alias find, incompatible CLI)
if command -v fd >/dev/null 2>&1; then
  alias fdi="fd -i"       # Case-insensitive
  alias fde="fd -e"       # By extension
  alias fdt="fd -t d"     # Directories only
fi

# rg - better grep (don't alias grep, subtly different)
if command -v rg >/dev/null 2>&1; then
  alias rgi="rg -i"       # Case-insensitive
  alias rgu="rg -uu"      # Unrestricted (ignore .gitignore)
  alias rgl="rg -l"       # Files only
fi

# =============================================================================
# GIT WORKFLOW
# =============================================================================

# Git aliases for better workflow
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git pull"
alias gd="git diff"
alias gds="git diff --staged"
alias gco="git checkout"
alias gb="git branch"
alias glog="git log --oneline --graph --decorate"

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================

# Chezmoi helpers
alias cm='chezmoi'
alias cma='chezmoi apply'
alias cmd='chezmoi diff'
alias cms='chezmoi status'

# Brew bundle helpers
alias bb='brew-bundle'
alias bbi='brew-bundle install'
alias bbc='brew-bundle check'
alias bbd='brew-bundle dump'
