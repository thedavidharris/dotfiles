# Disable Apple's zsh session logic from /etc/zshrc_Apple_Terminal, this has
# to be done here to load early enough.
export SHELL_SESSIONS_DISABLE=0

# Set up homebrew paths
if [[ $(arch) == arm64* ]]; then
  export BREW_PREFIX=/opt/homebrew
else
  export BREW_PREFIX=/usr/local
fi

# Set the path to include:
#  - $HOME/bin       for local tools
#  - $HOME/.cargo/bin for rust tools installed by cargo
#  - $HOME/.local/bin for python tools installed by pip
#  - $BREW_PREFIX/bin for Homebrew on Apple Silicon, or duplicates the /usr/local/bin path
#  - $BREW_PREFIX/sbin for Homebrew on Apple Silicon, or duplicates the /usr/local/bin path
#  - /usr/local/bin
#  - /usr/local/sbin
#  - /usr/bin         for system executables
#  - /usr/sbin
#  - /bin
#  - /sbin
export PATH="$HOME/bin:$HOME/.cargo/bin:$HOME/.local/bin:$BREW_PREFIX/bin:$BREW_PREFIX/sbin:/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"

# 1Password
# This in zsh env because of the way it aliases key commands, although probably should find a way around this
source ~/.config/op/plugins.sh
